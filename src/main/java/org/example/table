SELECT * FROM ingredients

ALTER TABLE ingredients
MODIFY NAME VARCHAR(255) NOT NULL,
MODIFY PRICE DOUBLE NOT NULL,
MODIFY CALORIES INT NOT NULL;

ALTER TABLE ingredients
ADD CONSTRAINT UQ_VEGETARIAN UNIQUE (VEGETARIAN);